<!-- layout폴더 우측 클릭 new - layout resource file -
     Root element에 LinearLayout
     strings.xml에 list구성
     <string-array name="List">
        <item>A형</item>
        <item>B형</item>
        <item>O형</item>
        <item>AB형</item>

    </string-array>

     -->
