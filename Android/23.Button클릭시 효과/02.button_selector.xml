<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 버튼의 상태에 따라 다른값을 적용하려면 태그를 정의 하여야 한다.
         android:state_pressed="true" : 현재 클릭이 된 상태
         android:state_enabled="true" : 현재 사용이 가능한 경우
         android:state_selected - 현재 선택이 된 경우
         android:state_focused - 현재 포커스를 가진 경우
         android:state_checked - 현재 체크된 경우
    -->

    <!-- 버튼 클릭 후 -->
    <item
        android:state_pressed="true"
        android:drawable="@drawable/a_search"/>
    <!-- 버튼 클릭 전 -->
    <item
        android:state_pressed="false"
        android:drawable="@drawable/b_search"/>


</selector>
